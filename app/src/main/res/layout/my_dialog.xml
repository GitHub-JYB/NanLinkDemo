<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog">

    <RelativeLayout
        android:layout_width="278dp"
        android:layout_height="154dp"
        android:layout_centerInParent="true">


        <TextView
            android:id="@+id/my_dialog_title"
            android:text="创建场景"
            android:textColor="@color/blue"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/my_dialog_message"
            android:text="该场景名称已存在,\n请尝试使用其它名称。"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_below="@+id/my_dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="22dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/my_dialog_input"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/my_dialog_title"
            android:background="@drawable/bg_unable_btn_login"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/my_dialog_inputText"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="start"
                android:layout_centerVertical="true"
                android:inputType="text"
                android:paddingStart="12dp"
                android:singleLine="true"
                android:background="@null"
                android:layout_toStartOf="@+id/my_dialog_inputText_clean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/my_dialog_inputText_clean"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_clear_text"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


        <View
            android:background="@color/decoration_dialog"
            android:layout_width="match_parent"
            android:layout_above="@+id/my_dialog_rl"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/my_dialog_rl"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            >

            <Button
                android:text="重试"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:id="@+id/my_dialog_NeutralButton"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <Button
                android:text="取消"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:id="@+id/my_dialog_NegativeButton"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:layout_toStartOf="@+id/decoration_dialog_Positive_Negative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <View
                android:id="@+id/decoration_dialog_Positive_Negative"
                android:layout_width="1dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:background="@color/decoration_dialog"
                android:layout_height="match_parent"/>

            <Button
                android:text="确认"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:gravity="center"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/decoration_dialog_Positive_Negative"
                android:id="@+id/my_dialog_PositiveButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>