<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="278dp"
        android:layout_height="154dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog">


        <TextView
            android:id="@+id/read_dialog_title"
            android:text="创建场景"
            android:textColor="@color/blue"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/read_dialog_content"
            android:text="该场景名称已存在,\n请尝试使用其它名称。"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_below="@+id/read_dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="22dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/read_dialog_inputText"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_below="@+id/read_dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/decoration_dialog"
            android:layout_width="match_parent"
            android:layout_above="@+id/read_dialog_cancel"
            android:layout_height="1dp"/>

        <TextView
            android:text="取消"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:id="@+id/read_dialog_cancel"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="42dp"/>

        <View
            android:layout_toEndOf="@+id/read_dialog_cancel"
            android:id="@+id/decoration_dialog_confirm_cancel"
            android:layout_width="1dp"
            android:background="@color/decoration_dialog"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_height="42dp"/>

        <TextView
            android:layout_toEndOf="@+id/decoration_dialog_confirm_cancel"
            android:text="确认"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:id="@+id/read_dialog_confirm"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="42dp"/>

    </RelativeLayout>

</RelativeLayout>