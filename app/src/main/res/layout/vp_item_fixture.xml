<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >

    <RelativeLayout
        android:id="@+id/fixture"
        android:layout_width="361dp"
        android:layout_height="68dp"
        android:paddingTop="6dp"
        android:paddingStart="9dp"
        android:paddingBottom="12dp"
        android:paddingEnd="9dp"
        android:background="@drawable/bg_fixture">


        <RelativeLayout
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingStart="16dp"
            >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demo Scene"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="2dp"
            android:text="CH: 015"
            android:textColor="@color/login_hintText"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/connectType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="2dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/number"
            android:text="蓝牙"
            android:textColor="@color/login_hintText"
            android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/right_second_icon"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_toStartOf="@+id/menu"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_dim_on" />


        <ImageView
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_three_point" />
    </RelativeLayout>


</RelativeLayout>

