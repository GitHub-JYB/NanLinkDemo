<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/theme">


    <ImageView
        android:id="@+id/icon_user_setting"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_width="60dp"
        android:src="@drawable/ic_user"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/icon_user_setting"
        android:orientation="vertical">
    <TextView
        android:id="@+id/nickName_user_setting"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="测试者"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/email_user_setting"
        android:textColor="@color/login_hintText"
        android:textSize="12sp"
        android:text="1234567abcd@gamil.com"
        android:layout_below="@+id/nickName_user_setting"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>

