<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.example.NanLinkDemo.ui.MyToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SurfaceView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pointer"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/change_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="放大"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/preview"
            />

    </RelativeLayout>


    <View
        android:id="@+id/color"
        android:layout_width="191dp"
        android:layout_height="30dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp" />


    <RelativeLayout
        android:layout_width="191dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/HSI_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="色相"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/HSI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/HSI_text"
                android:text="111"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/SAT_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饱和度"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/SAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/SAT_text"
                android:text="1111"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp">

        <ImageView
            android:id="@+id/getPhone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bg_able_camera"/>

        <TextView
            android:id="@+id/retry"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="重试"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginEnd="48dp"
            android:layout_toStartOf="@id/getPhone"/>

        <TextView
            android:id="@+id/complete"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginStart="48dp"
            android:layout_toEndOf="@id/getPhone"/>
    </RelativeLayout>


</LinearLayout>